<LoginScreen>:
    GridLayout:
        cols : 1
        GridLayout:
            cols : 1
            padding: 15,15
            spacing: 20 , 20
            Label:
                text : "User Login"
                font_size : "20sp"
            TextInput:
                id : username
                hint_text : "Username"
            TextInput:
                id : password
                password : True
                hint_text : "Password"
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press : root.login(root.ids.username.text ,root.ids.password.text)
                    size_hint : 0.4 , 0.7
                    pos_hint : {'center_x':0.5 , 'center_y': 0.7}
            Label:
                id : login_wrong
                text: ""
        GridLayout:
            cols : 2
            size_hint: 0.2,0.2
            padding: 15,15
            spacing : 30,30
            Button:
                text:"Forgot Password ?"
                background_color : 1,3,1,0
                opacity : 1 if self.state == "normal" else 0.5
                color : 0.1,0.7,1,1
            Button :
                text : "Signup"
                on_press : root.sign_up()
                background_color : 1,3,1,0
                opacity : 1 if self.state == "normal" else 0.5
                color : 0.1,0.7,1,1
                

<SignUpScreen>:
    GridLayout:
        cols:1    
        padding : 15,15
        spacing : 20,20
        Label:
            text : "Signup for more Benefits"
        TextInput:
            size_hint : 0.6,0.6
            id : username
            hint_text: "New Username"
        TextInput:
            id : password
            hint_text: "New Password"
        RelativeLayout:
            Button:
                size_hint : 0.2 , 0.2
                pos_hint : {'center_x':0.5 , 'center_y': 0.7}
                text:"Submit"
                on_press: root.add_user(root.ids.username.text , root.ids.password.text)     

<SignUpScreenSuccess>:
    GridLayout:
        cols:1
        padding : 15,15
        spacing : 20,20
        Label:
            text: "Signup Success!"
        RelativeLayout:
            Button:
                pos_hint : {'center_x':0.5 , 'center_y': 0.7}
                size_hint : 0.35,0.35
                text: "Login Page"
                on_press : root.go_to_login()

<LoginScreenSuccess>:
    GridLayout:
        cols:1
        padding: 15,15
        spacing : 20,20
        RelativeLayout:
            ImageButton:
                text:"logout"
                on_press : root.log_out()
                source : 'logout_hover.png' if self.hovered else "logout_nothover.png"
                size_hint : 0.25,0.25
                pos_hint : {'center_x':0.93 , 'center_y': 0.8}
        Label :
            text : "How do you feel ?"
        TextInput:
            id: feeling
            hint_text:"Things to try :Happy, Sad , Unloved......."
        Button:
            text:"Enlighten me!"
            on_press : root.get_quote(root.ids.feeling.text)
            size_hint : 0.7,0.7
            pos_hint : {'center_x':0.5 , 'center_y': 0.7}
        ScrollView:
            Label:
                id : quote
                text: ""
                text_size : self.width,None
                size_hint_y : None
                height : self.texture_size[1]

<RootWidget>:
    LoginScreen:
        name : "login_screen"
    SignUpScreen:
        name : "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    LoginScreenSuccess:
        name:"login_screen_success"
    